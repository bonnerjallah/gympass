{
  "compilerOptions": {
    "target": "ES2020",                   // Modern JS output
    "module": "CommonJS",                 // Important! Needed for ts-node
    "rootDir": "./",                      // Where your TS files live
    "outDir": "./dist",                   // Where compiled JS will go
    "esModuleInterop": true,              // Enables default imports for CJS libs
    "strict": true,                       // Strong type checking
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],               // Include all TS files
  "exclude": ["node_modules", "dist"]     // Don't compile these
}
